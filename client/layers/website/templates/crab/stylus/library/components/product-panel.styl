.product-panel
    border-radius 0
    border none
    &.panel-primary
        .panel-heading
            background $color-bg-primary
            color $color-text-primary
            &:hover
                background desaturate(darken($color-bg-primary, 10%), 10%)
    &.panel-secondary
        .panel-heading
            background darken(#FFFFFF, 8%)
            color $color-text-secondary
            &:hover
                background darken(#FFFFFF, 12%)
    .page-header
        display block
        width 100%
        color $color-text-secondary
        padding 20px
        &:before
        &:after
            content " "
        &:after
            clear both
    .panel-heading
        display table
        width 100%
        border none
        border-radius 0
        cursor pointer
        kits(transition, background .3s)
        .panel-title
            display table-cell
            width 100%
            font-size 1.6rem
            vertical-align middle
        .panel-title-arrow
            float right
            width 42px
            text-align right
        &:before
        &:after
            display table
            content " "
        &:after
            clear both
    .panel-collapse
        .panel-body
            position relative
            display block
            width 100%
            border-top none !important
            padding 7px
            .thumbnail-wrapper
                padding 0
                .thumbnail
                    margin 10px
                    text-align center
                    h1
                    h2
                    h3
                    h4
                    h5
                    h6
                        margin 10px 0
                        &:not(.text-primary):not(.text-secondary)
                            color $color-text-secondary
                    .imgLiquid
                        width 100%
                        height 120px
                    .description
                        font-size 0.875rem
                    .unit-value
                        font-size 1rem
                    .amount
                        .amount-field
                            text-align center
            &:before
            &:after
                display table
                content " "
            &:after
                clear both
            +screen(xs)
                padding 0
    +screen(xs)
        + .panel
            margin-top 1px !important
