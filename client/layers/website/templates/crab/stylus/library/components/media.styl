.media-wrapper
    display table
    padding 7px
    .media
        $media-color = $color-dark
        display table-cell
        padding 7px
        background $media-color;
        .media-body
            .media-heading
                color $color-text-thirdary
                set-font-size(22px)
            .description
                color $color-light
                set-font-size(14px)
                *
                    font-size .875rem !important
            .input-group
                width 50%
                +screen(xs)
                    width 100%
                +screen(lg)
                    width 35%
        .media-left
            a
                cursor default
        .media-object
            width 150px
            border solid 1px darken($media-color, 15%)
            +screen(xs)
                width 75px
        .unit-value
            color $color-light
            set-font-size(22px)
    +screen(xs)
        border-bottom solid 1px #EEEEEE
        padding 2px
        &:last-child
            border-bottom 0
    +screen-min(md)
        height 254px
        min-height 254px
    +screen-min(lg)
        height 234px
        min-height 234px
