.badge
    set-font-size(9px)
    border-radius 18px
    &.badge-empty
        width 18px
        height 18px
        overflow hidden
    &.badge-primary
        background #428bca
    &.badge-success
        background #5cb85c
    &.badge-info
        background #5bc0de
    &.badge-warning
        background #f0ad4e
    &.badge-danger
        background #d9534f
