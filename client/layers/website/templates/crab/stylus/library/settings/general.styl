// Grid Columns
    $grid-columns = 12

    $grid-gutter = 30px

// Container Break-points
    $container-size = {
        xs: 100%,
        sm: 750px,
        md: 970px,
        lg: 1170px
    }

// Screen Break-points
    $screen-size = {
        xs: 0px,
        sm: 768px,
        md: 992px,
        lg: 1200px
    }

    $screen = {
        xs: {
            min: 0,
            max: ($screen-size['sm'] - 1px)
        },
        sm: {
            min: $screen-size['sm'],
            max: $screen-size['md'] - 1px
        },
        md: {
            min: $screen-size['md'],
            max: $screen-size['lg'] - 1px
        },
        lg: {
            min: $screen-size['lg'],
            max: 0
        }
    }
