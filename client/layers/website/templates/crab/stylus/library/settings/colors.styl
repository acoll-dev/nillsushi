$color-red = #CB2128
$color-yellow = #FFCF26
$color-light = #FFFFFF
$color-dark = #333333

$color-bg-primary = $color-light
$color-bg-secondary = $color-yellow

$color-bg-logo = $color-red

$color-text-primary = $color-red
$color-text-secondary = $color-dark

$color-btn-bg = $color-red
$color-btn-text = $color-light

$color-btn-bg-hover = desaturate(darken($color-btn-bg , 10%), 10%)
$color-btn-text-hover = desaturate(darken($color-btn-text , 10%), 10%)

$color-btn-bg-disabled = desaturate(darken($color-btn-bg , 5%), 20%)
$color-btn-text-disabled = desaturate(darken($color-btn-text , 5%), 20%)
