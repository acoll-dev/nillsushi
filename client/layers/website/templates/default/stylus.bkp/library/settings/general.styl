// Grid Columns
    $grid-columns = 12

    $grid-gutter = 30px

// Container Break-points
    $container-size = {
        xs: 100%,
        sm: 720px,
        md: 940px,
        lg: 1140px,
        xl: 1540px
    }

// Screen Break-points
    $screen-size = {
        xs: 0px,
        sm: 600px,
        md: 990px,
        lg: 1200px,
        xl: 1600px
    }

    $screen = {
        xs: {
            min: 0,
            max: ($screen-size['sm'] - 1px)
        },
        sm: {
            min: $screen-size['sm'],
            max: $screen-size['md'] - 1px
        },
        md: {
            min: $screen-size['md'],
            max: $screen-size['lg'] - 1px
        },
        lg: {
            min: $screen-size['lg'],
            max: $screen-size['xl'] - 1px
        },
        xl: {
            min: $screen-size['xl'],
            max: 0
        }
    }
