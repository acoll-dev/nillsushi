.highlight-wrapper
    flexbox()
.highlight-spaced
    +screen-min(md)
        .highlight
            padding 7px 40px
            .highlight-inner
                padding 15px 60px
    +screen(sm)
        .highlight
            padding 7px 20px
            .highlight-inner
                padding 15px 40px
                padding 15px 60px
    +screen(xs)
        .highlight
            padding 7px
            .highlight-inner
                padding 15px 50px
.highlight-gray-color
    .highlight
        kits(filter, grayscale(1))
        kits(transition, all .5s)
    .highlight
        &:hover
        &:active
            kits(filter, grayscale(0))
.highlight
    position relative
    padding 7px
    text-align center
    flexbox()
    .highlight-inner
        width 100%
        background $color-highlight-bg
        padding 0
        kits(transition, all .3s)
        &:hover
            background $color-highlight-bg-hover
        h1
        h2
        h3
        h4
        h5
        h6
            margin 0
            color $color-highlight-title
        > *
            margin 7px 0 !important
            &:first-child
                margin-top 15px !important
            &.highlight-image:first-child
                margin-top 0 !important
            &:last-child
                margin-bottom 15px !important
            &.highlight-image:last-child
                margin-bottom 0 !important
            &:not(.highlight-image):not(.btn)
                padding 0 15px
        > .fa
            width auto
            display block
            margin-right auto !important
            margin-left auto !important
            color $color-highlight-icon
        > .date
            text-align left
            padding 5px
        > a
            display inline-block
            text-decoration none
        > p
            display inline-block
            margin 7px 0 !important
            padding .08rem 0
            &:last-child
                padding-bottom 0
        > .clearfix
            margin 0 !important
        .btn
            display table
            margin-right auto !important
            margin-left auto !important
        // > *:first-child
        //     margin-top 0 !important
        // > *:last-child
        //     margin-bottom 0 !important
        .highlight-title
            set-font-size(26px)
        .highlight-image
            position relative
            display block
            width 100%
            max-width 100%
            overflow hidden !important
            object-fit cover
            img
                position absolute
                top 50%
                left 50%
                kits(transform, translate(-50%, -50%))
            a
                display block
                width 100%
                height 100%
            &.preloader-wrapper
                display: table;
    .preloader
        position relative
        display table-cell
        vertical-align middle
        a
            position absolute
            display block !important
            width 100%
            height 100%
            top 0
            bottom 0
            left 0
            right 0
.highlight-controller
    display table
    .btn
        margin 0 7px
        background $color-highlight-controller-bg
        color $color-highlight-controller-icon
        if($size-highligh-controller-border)
            border solid $size-highligh-controller-border $color-highlight-controller-border
        kits(transition, all .3s)
        &:hover
        &:active
            background $color-highlight-controller-bg-hover
            color $color-highlight-controller-icon-hover
            outline none
            if($size-highligh-controller-border)
                border-color $color-highlight-controller-border-hover
        &:first-child
            margin-left 0
        &:last-child
            margin-right 0
    &.highlight-controller-top
        position absolute
        right 15px
        top 50%
        kits(transform, translateY(-50%))
        .btn
            display block
            float left
            +screen-min(md)
                background $color-highlight-title-controller-bg
                color $color-highlight-title-controller-icon
                if($size-highligh-controller-border)
                    border solid $size-highligh-controller-border $color-highlight-title-controller-border
                &:hover
                &:active
                    background $color-highlight-title-controller-bg-hover
                    color $color-highlight-title-controller-icon-hover
                    if($size-highligh-controller-border)
                        border-color $color-highlight-title-controller-border-hover
        +screen-max(sm)
            position relative
            margin 0 auto 30px
            top auto
            right auto
            kits(transform, translateY(0))
    &.highlight-controller-bottom
        position relative
        width 100%
        margin 30px 0
        text-align center
