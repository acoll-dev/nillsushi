make-title()
    position relative
    color $color-title-text
    padding 0
    margin 30px 0
    background $color-title-bg
    h1
        position relative
        padding 0 15px
        text-align center
        set-font-size(36px)
    &:first-child
        margin-top -30px
        h1
            margin-top 20px
            margin-bottom 20px
    if($size-title-border)
        padding remify($size-title-border * 2) remify($size-title-border * 3)
        border-left solid $size-title-border $color-title-border
