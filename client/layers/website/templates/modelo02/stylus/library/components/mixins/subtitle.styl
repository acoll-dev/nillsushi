make-subtitle()
    position relative
    display table
    set-font-size(26px)
    color $color-subtitle-text
    padding 10px 0
    margin 0 auto 40px
    background $color-subtitle-bg
    text-align center
    &:first-child
        margin-top 0
    if($size-subtitle-border)
        padding remify($size-subtitle-border * 2) remify($size-subtitle-border * 3)
        border-bottom solid $size-subtitle-border $color-subtitle-border
