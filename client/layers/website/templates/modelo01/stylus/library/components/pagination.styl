.pagination
    li
        a
            color $color-pagination-text !important
            background $color-pagination-bg !important
            &:hover
            &:focus
            &:active
                color $color-pagination-text-hover !important
                background $color-pagination-bg-hover !important
        &.active
            a
                color $color-pagination-text-active !important
                background $color-pagination-bg-active !important
