footer
    background $color-footer-top-bg
    color $color-footer-top-text
    if($size-footer-top-border)
        border-top solid $size-footer-top-border $color-footer-top-border
    .footer-top
        padding 30px 0
    .footer-bottom
        padding 15px 0
        background $color-footer-bottom-bg
        color $color-footer-bottom-text
        if($size-footer-bottom-border)
            border-bottom solid $size-footer-bottom-border $color-footer-bottom-border
        .copyright
            display inline-block
            padding 11px 0
