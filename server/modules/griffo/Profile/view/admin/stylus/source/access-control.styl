.access-control-list
    margin 0;
    margin-bottom 20px;
    box-shadow 1px 1px 3px rgba(0,0,0,.25);
    border-radius 4px;
    ul
        margin 15px 0 0;
        box-shadow 1px 1px 3px rgba(0,0,0,.25);
        border-radius 4px;
    li
        position relative;
        display table;
        width 100%;
        padding 15px;
        list-style-type none;
        background #F9F9F9;
        -webkit-user-select none;
        -moz-user-select none;
        -ms-user-select none;
        user-select none;
        h4
        h5
            display table;
            float left;
            line-height 22px;
            margin 0;
            padding 0;
            a
                cursor pointer;
                text-decoration none;
                color inherit;
        .visibility
            padding 0 20px
            color rgba(0,0,0,.25)
            cursor pointer
            -webkit-transition color .3s
            -moz-transition color .3s
            -ie-transition color .3s
            -o-transition color .3s
            transition color .3s
            &:hover
                color rgba(0,0,0,.5)
            &.active
                color #1ab394
        .bootstrap-switch
            float right;
            .bootstrap-switch-text
                content '&nbps;';
                padding 0 10px;
        &.list-group-item-header
            background #F6F6F6;
        ul
            li
                background #FCFCFC;
